extends layout

block content
	div(class='navbar navbar-default navbar-fixed-top', role='navigation')
		div(class='container')
			div(class='navbar-header')
				button(type='button', class='navbar-toggle', data-toggle='collapse', data-target='.navbar-collapse')
					span(class='sr-only') Toggle navigation
					span(class='icon-bar')
					span(class='icon-bar')
					span(class='icon-bar')
				a(class='navbar-brand', href='/') #{presentation.name}
			div(class='navbar-collapse collapse')
				div(class='navbar-form navbar-right')
					a(id='asOpen', class='btn btn-primary', href='#') Add Slide
	div(class='container')
		div(class='slides' id='presentation' data-id='#{presentation.id}')
				each item in presentation.slides
					div(class='slide text-center #{item.type}', id='#{item.id}')
						if(item.type === 'text')
							span #{item.title)
						if(item.type === 'image')
							img(src='#{item.data}')
						if(item.type === 'youtube')
							span #{item.title)

	div(id='asDialog', class='slideDialog', tabindex='-1', role='dialog', aria-hidden='true')
		div(class='container')
			form(class='form', role='form')
				div(class='form-group')
					div(class='col-sm-10')
						label(for='asType', control-label) Slide Type
						select(class='form-control', id='asType', placeholder='text')
							option(value='text') Text
							option(value='image') Image
							option(value='youtube') Youtube
						label(for='asName', control-label) Slide Text/Url
						input(type='text', class='form-control', id='asData',)
				div(class='form-group')
					div(class='col-sm-offset-2 col-sm-10')
						div(class='btn-toolbar')
							button(id='asButton', type='submit' class='btn btn-default') Add Slide
							button(id='asClose', type='button' class='btn btn-default') Close
	div(id='dsDialog', class='slideDialog', tabindex='-1', role='dialog', aria-hidden='true')
		div(class='container')
			form(class='form', role='form')
				p Are you sure you want to delete this slide?
				div(class='form-group')
					div(class='col-sm-offset-2 col-sm-10')
						div(class='btn-toolbar')
							button(id='dsButton', type='submit' class='btn btn-default') Yes
							button(id='dsClose', type='button' class='btn btn-default') No